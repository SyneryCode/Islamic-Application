{
  "info": {
    "name": "Islamic App API",
    "_postman_id": "b2719b47-93fd-4a44-9bcb-a34ad11b52da",
    "description": "Full Quran + Auth + Audio API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"12345678\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"12345678\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "User Info",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer TOKEN_HERE" }],
            "url": {
              "raw": "http://localhost:8000/api/auth/user",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "user"]
            }
          }
        }
      ]
    },
    {
      "name": "Quran",
      "item": [
        {
          "name": "Get Surah",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8000/api/quran/surah/{{surah}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "quran", "surah", "{{surah}}"]
            }
          }
        },
        {
          "name": "Get Ayah",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8000/api/quran/ayah/{{surah}}:{{ayah}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "quran", "ayah", "{{surah}}:{{ayah}}"]
            }
          }
        },
        {
          "name": "Search Ayah",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8000/api/quran/search?q={{query}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "quran", "search"],
              "query": [{ "key": "q", "value": "{{query}}" }]
            }
          }
        }
      ]
    },
    {
      "name": "Navigation",
