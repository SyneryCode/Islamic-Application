    {
      "name": "Audio",
      "item": [
        {
          "name": "Ayah Audio",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8000/api/quran/audio/{{surah}}/{{ayah}}?reciter=ar.alafasy",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "quran", "audio", "{{surah}}", "{{ayah}}"],
              "query": [{ "key": "reciter", "value": "ar.alafasy" }]
            }
          }
        },
        {
          "name": "Surah Audio",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8000/api/quran/audio/surah/{{surah}}?reciter=ar.alafasy",
